{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "command": [
        "gunicorn",
        "bolsonaro_api.wsgi:application",
        "--bind",
        "0.0.0.0:8000"
      ],
      "essential": true,
      "image": "muriloscarpasitonio/bolsonaro-api:django-aws",
      "memory": 1024,
      "mountPoints": [
        {
          "containerPath": "/app/django/static",
          "sourceVolume": "Django_Static_Volume"
        }
      ],
      "name": "django"
    },
    {
      "essential": true,
      "image": "muriloscarpasitonio/bolsonaro-api:nginx",
      "memory": 1024,
      "mountPoints": [
        {
          "containerPath": "/app/django/django_files/static",
          "sourceVolume": "Django_Static_Volume"
        },
        {
          "containerPath": "/app/react/react_files/static",
          "sourceVolume": "React_Static_Volume"
        }
      ],
      "name": "nginx",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ]
    },
    {
      "command": ["serve", "-s", "build", "-l", "3000"],
      "essential": true,
      "image": "muriloscarpasitonio/bolsonaro-api:react",
      "memory": 1024,
      "mountPoints": [
        {
          "containerPath": "/app/react/build/static",
          "sourceVolume": "React_Static_Volume"
        }
      ],
      "name": "react"
    }
  ],
  "family": "",
  "volumes": [
    {
      "host": {
        "sourcePath": "django_static_volume"
      },
      "name": "Django_Static_Volume"
    },
    {
      "host": {
        "sourcePath": "react_static_volume"
      },
      "name": "React_Static_Volume"
    }
  ]
}
